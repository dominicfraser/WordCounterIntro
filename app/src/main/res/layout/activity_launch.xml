<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.codeclan.com.wordcounter.LaunchActivity">

    <EditText
        android:id="@+id/enter_all_text"
        android:hint="@string/enter_prompt"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/amount_of_words"
        android:textSize="50sp"
        android:text="/Count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_all_text"
        android:layout_alignLeft="@+id/enter_all_text"
        android:layout_alignStart="@+id/enter_all_text"
        android:layout_marginTop="113dp" />

</RelativeLayout>
