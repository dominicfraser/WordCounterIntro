<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.codeclan.com.wordcounter.LaunchActivity">

    <EditText

        android:id="@+id/enter_all_text"
        android:hint="@string/enter_prompt"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="onWordsEntered"
        android:id="@+id/on_show_count"
        android:text="@string/button_for_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/amount_of_words"
        android:textSize="50sp"
        android:text="/Count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/on_show_count"
        android:layout_alignRight="@+id/enter_all_text"
        android:layout_alignEnd="@+id/enter_all_text"
        android:layout_marginBottom="37dp" />

</RelativeLayout>
